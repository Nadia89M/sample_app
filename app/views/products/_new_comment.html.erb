
<% if signed_in? %>
<h6>Add a review:</h6>
<%= form_for([@product, @product.comments.build]) do |f| %>
<p>
  <%= f.label :body, "Comments" %><br>
  <%= f.text_area :body %>
</p>
<p>
  <div class="rating"></div>
</p>

<button><%= f.submit "Submit", :class => "submit" %></button>

<% end %>
<% end %>
