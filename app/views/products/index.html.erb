<% if notice %>
  <p id="notice" class="notice alert alert-primary"><%= notice %></p>
<% end %>

<h1>Products</h1>

<div class="container-fluid">
  <div class="row">
    <% cache(cache_key_for_products) do %>
      <%= render @products %>
    <% end %>
  </div>
</div>

<br>

<div class="new">
  <%= link_to 'New Product', new_product_path, :class => "new" %>
</div>
